<script type="text/x-handlebars-template" id="projects-issues-list-template">
<div class="row">
  <div class="span3 list">
    <h2>{{ __ "New" }}</h2>
    <ul>
      {{# each issues.new }}
      <li class="issue">
        <div>
          <strong class="task-title">
            {{ this.name }}
          </strong>
        </div>
        <hr>
        <div>
          <span>@ {{ this.component }}</span>
        </div>
        <hr>
        <div class="icons">
            <div class="icon {{ this.priority }}"></div>
            <div class="icon {{ this.kind }}"></div>
            {{# if this.comments }}
            <div class="icon comments"></div>
            {{/ if }}
            <div class="responsible">{{ this.responsible }}</div>
            <div style="clear:both;"></div>
        </div>
      </li>
      {{/ each }}
    </ul>
  </div>
  <div class="span3 list">
    <h2>{{ __ "Open" }}</h2>
    <ul>
      {{# each issues.open }}
      <li class="issue">
        <div>
          <strong class="task-title">
            {{ this.name }}
          </strong>
        </div>
        <hr>
        <div>
          <span>@ {{ this.component }}</span>
        </div>
        <hr>
        <div class="icons">
            <div class="icon {{ this.priority }}"></div>
            <div class="icon {{ this.kind }}"></div>
            {{# if this.comments }}
            <div class="icon comments"></div>
            {{/ if }}
            <div class="responsible">{{ this.responsible }}</div>
            <div style="clear:both;"></div>
        </div>
      </li>
      {{/ each }}
    </ul>
  </div>
  <div class="span3 list">
    <h2>{{ __ "On hold" }}</h2>
    <ul>
      {{# each issues.onhold }}
      <li class="issue">
        <div>
          <strong class="task-title">
            {{ this.name }}
          </strong>
        </div>
        <hr>
        <div>
          <span>@ {{ this.component }}</span>
        </div>
        <hr>
        <div class="icons">
            <div class="icon {{ this.priority }}"></div>
            <div class="icon {{ this.kind }}"></div>
            {{# if this.comments }}
            <div class="icon comments"></div>
            {{/ if }}
            <div class="responsible">{{ this.responsible }}</div>
            <div style="clear:both;"></div>
        </div>
      </li>
      {{/ each }}
    </ul>
  </div>
