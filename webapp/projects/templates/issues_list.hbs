          <span>@ {{ this.component }}</span>
        </div>
        <hr>
        <div class="icons">
            <div class="icon {{ this.priority }}"></div>
            <div class="icon {{ this.kind }}"></div>
            {{# if this.comments }}
            <div class="icon comments"></div>
            {{/ if }}
            <div class="responsible">{{ this.responsible }}</div>
            <div style="clear:both;"></div>
        </div>
      </li>
      {{/ each }}
    </ul>
  </div>
</div>
</script>